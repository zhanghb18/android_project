<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="1dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:maxHeight="400dp"
    >

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="10dp"
>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/draft_avator"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/draft"
                app:strokeColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/draft_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-06-05 19:09:00"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#2F5597"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>
        <TextView
                android:id="@+id/draft_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="标题"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <ImageView
        android:id="@+id/draft_rightarrow"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_right_content_arrow"
        android:layout_gravity="end"/>


